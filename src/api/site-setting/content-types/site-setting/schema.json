{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Setting"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "default": "Urban Purple",
      "required": true
    },
    "siteDescription": {
      "type": "text",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "contactEmail": {
      "type": "email",
      "required": true
    },
    "contactPhone": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "socialMedia": {
      "type": "json"
    },
    "businessHours": {
      "type": "json"
    },
    "heroTitle": {
      "type": "string",
      "required": true
    },
    "heroSubtitle": {
      "type": "text",
      "required": true
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "features": {
      "type": "json"
    },
    "newsletterTitle": {
      "type": "string",
      "required": true
    },
    "newsletterSubtitle": {
      "type": "text",
      "required": true
    }
  }
}





